<section class="hero is-fullheight is-light is-bold">
      <div>
        <h2>Trip summary</h2>
        <h4><%= @booking.flight.scheduled_on.strftime('%d %B %Y') %></h4>
        <table class="table">
          <thead>
            <tr>
              <th>Departure</th>
              <th>Arrival</th>
            </tr>
          </thead>
          <tbody>
            <tr>
              <td><%= @booking.flight.from_airport.code %> <%= @booking.flight.scheduled_on.strftime('%H:%M') %></td>
              <td><%= @booking.flight.to_airport.code %> <%= (@booking.flight.scheduled_on + (@booking.flight.duration/60).to_i.hours).strftime('%H:%M') %></td>
            </tr>
          </tbody>
        </table>
        
        <h2>Passenger details</h2>
        <table class="table">
          <thead>
            <tr><th>Passenger name</th></tr>
          </thead>
          <tbody>
          <% @booking.passengers.each_with_index do |passenger, idx| %>
            <tr><td><%= passenger.name %></td></tr>
          <% end %>
          </tbody>
        </table>
  
        <h2>Contact details</h2>
        <table class="table">
          <thead>
            <tr>
              <th>Passenger name</th>
              <th>Email</th>
            </tr>
          </thead>
          <tbody>
          <% @booking.passengers.each_with_index do |passenger, idx| %>
            <tr>
              <td><%= passenger.name %></td>
              <td><%= passenger.email %></td>
            </tr>
          <% end %>
          </tbody>
        </table>
  
        &#8594 <%= link_to 'Book more flights', root_path, class: "button" %>

      </div>
</section>